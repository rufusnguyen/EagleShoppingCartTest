@model IList<ShoppingCart.Models.HomeViewModel>
<form method="post" action="Home/Submit">
    <div class="panel panel-default panel-table panel-option">

        <div class="panel-heading">
            <h6>ChoosePackage</h6>
        </div>
        <div class="panel-body">

            <table id="Packages" name="Packages" data-array="Packages" class='dynamic-table table table-striped table-bordered table-hover table-sortable table-list option-table attribute-0-option-table'>
                <thead class="thead-default">
                    <tr>
                        <th class="text-center bg-color-grey">Category</th>
                        <th class="text-center bg-color-grey">Package</th>
                        <th class="text-center bg-color-grey">Description</th>
                        <th class="text-center bg-color-grey">Employee</th>
                        <th class="text-center bg-color-grey"><label class="glyphicon glyphicon-cog"></label></th>
                    </tr>
                </thead>
                <tbody>
                    <tr id="row0" data-id="0" data-array="Packages[0]">
                        <td data-name="CategoryId">
                            <input id="Packages_0_CategoryId" name="Packages[0].CategoryId" type="text" class="form-control category-combo-tree"
                                   style="width: 100%;" required="required" />
                            <span asp-validation-for="Packages[0].CategoryId" data-val="true" class="text-danger"></span>
                        </td>
                        <td data-name="PackageId">
                            <select id="Packages_0_PackageId" name="Packages[0].PackageId" class="form-control package-select" data-index="0"
                                    data-typeid="1"
                                    data-url='@Url.Action("PopulatePackagesByCategory", "Booking")'
                                    required="required">
                                <option value="" selected>Please select a package</option>
                                <option value="1">Package 1</option>
                                <option value="2">Package 2</option>
                                <option value="3">Package 3</option>
                            </select>
                            <span asp-validation-for="Packages[0].PackageId" data-val="true" class="text-danger"></span>
                        </td>
                        <td data-name="Description">
                            <input id="Packages_0_Description" name="Packages[0].Description" type="text" data-index="0" class="form-control package-description"
                                   style="width: 100%;" required="required" />
                        </td>
                        <td class="text-center" data-name="EmployeeId">
                            <select id="Packages_0_EmployeeId" name="Packages[0].EmployeeId" class="form-control employee-select" data-index="0"
                                    data-url='@Url.Action("PopulateEmployeesByPackage", "Booking")'
                                    required="required">
                                <option value="" selected>Please select an employee</option>
                                <option value="1">Employee 1</option>
                                <option value="2">Employee 2</option>
                                <option value="3">Employee 3</option>
                            </select>
                            <span asp-validation-for="Packages[0].EmployeeId" data-val="true" class="text-danger"></span>
                        </td>
                        <td class="text-center actions">
                            <button type="button" data-title="Delete" data-optionid="0" data-index="0" class='btn btn-warning glyphicon glyphicon-trash row-remove disable'></button>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            <div class="row">
                <button type="button" data-index="0" class="btn btn-sm btn-primary pull-right add-row">AddNewItem</button>
                <button type="submit" data-index="0" class="btn btn-sm btn-primary pull-right">Submit</button>
            </div>
        </div>

    </div>
</form>
@section scripts {
    @Scripts.Render("~/bundles/easy-ui")
    @Scripts.Render("~/bundles/main")
}
